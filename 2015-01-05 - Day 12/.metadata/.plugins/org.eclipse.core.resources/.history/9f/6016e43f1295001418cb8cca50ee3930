package question2;

import static org.junit.Assert.assertTrue;

import org.junit.Test;

public class TestingSimpleMap {
	/**
	 * String prefix for Name.
	 */
	private final String STRING = "TEST";
	
	/**
	 * Max range number.
	 */
    private final int RANGE = 100;
    
    /**
     * Amount of runs.
     */
    private final int RUNS = 2000;
    
    /**
     * Test SimpleMap for 2k random values put and get
     */
	@Test
    public void testSimpleMapFor2kRandomValuesInRange() {
		
		SimpleMap sm = new SimpleMapImpl();
		
		// Add 2k random values
		for( int i = 0; i < RUNS; i++ ) {
			int randomNumber = (int) (Math.random()*RANGE);
			sm.put(randomNumber, STRING + "_" + randomNumber);
		}
		
		// Scan throughout the n-RUNS if output is within range
		for( int i = 0; i < RUNS; i++ ) {
			String response = sm.get(i);
			if ( response != null ) {
				int randomNumber = getRandomNumber(response);
				if (!( randomNumber >= 0 && randomNumber <= RANGE ) ) {
					assert(false);
				}
			}
		}
    }
	
	private int getRandomNumber(String str) {
		return 0;
	}
    
}
